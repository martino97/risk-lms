<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <system.webServer>
        <handlers>
            <add name="Python FastCGI"
                 path="*"
                 verb="*"
                 modules="FastCgiModule"
                 scriptProcessor="C:\Python311\python.exe|C:\Python311\Lib\site-packages\wfastcgi.py"
                 resourceType="Unspecified"
                 requireAccess="Script" />
        </handlers>
        
        <staticContent>
            <mimeMap fileExtension=".woff" mimeType="application/font-woff" />
            <mimeMap fileExtension=".woff2" mimeType="application/font-woff2" />
            <mimeMap fileExtension=".json" mimeType="application/json" />
            <mimeMap fileExtension=".mp4" mimeType="video/mp4" />
            <mimeMap fileExtension=".webm" mimeType="video/webm" />
        </staticContent>
        
        <rewrite>
            <rules>
                <!-- Serve static files directly -->
                <rule name="Static Files" stopProcessing="true">
                    <match url="^static/(.*)$" />
                    <action type="Rewrite" url="staticfiles/{R:1}" />
                </rule>
                
                <!-- Serve media files directly -->
                <rule name="Media Files" stopProcessing="true">
                    <match url="^media/(.*)$" />
                    <action type="Rewrite" url="media/{R:1}" />
                </rule>
            </rules>
        </rewrite>
        
        <httpErrors errorMode="Detailed" />
        
        <security>
            <requestFiltering>
                <!-- Allow large file uploads for videos -->
                <requestLimits maxAllowedContentLength="524288000" />
            </requestFiltering>
        </security>
    </system.webServer>
    
    <appSettings>
        <!-- Django Application Settings -->
        <add key="WSGI_HANDLER" value="django.core.wsgi.get_wsgi_application()" />
        <add key="PYTHONPATH" value="C:\inetpub\wwwroot\risk_lms" />
        <add key="DJANGO_SETTINGS_MODULE" value="risk_lms.settings" />
        
        <!-- Database Settings -->
        <add key="DB_ENGINE" value="mssql" />
        <add key="DB_NAME" value="risk_lms" />
        <add key="DB_HOST" value="Martin\SQLEXPRESS" />
        
        <!-- Security Settings -->
        <add key="DEBUG" value="False" />
        <add key="SECRET_KEY" value="your-secure-secret-key-change-this-in-production" />
        
        <!-- Allowed Hosts (comma-separated) -->
        <add key="ALLOWED_HOSTS" value="localhost,127.0.0.1,risklms.cbtbank.co.tz,192.168.10.100" />
    </appSettings>
</configuration>
